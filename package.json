{
  "name": "glider",
  "version": "1.0.0",
  "description": "i18n compiler that generates TypeScript functions from JSON translations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "glider": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.mjs",
    "compile": "tsx src/compiler.ts",
    "dev": "tsx src/compiler.ts && node index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "yarn build"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/node": "^22.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.11"
  },
  "peerDependencies": {
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.1"
  }
}
